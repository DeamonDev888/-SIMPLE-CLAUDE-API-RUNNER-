#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules/mcp-proxy/dist/bin/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules/mcp-proxy/dist/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules/mcp-proxy/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules/mcp-proxy/dist/bin/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules/mcp-proxy/dist/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules/mcp-proxy/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/mcp-proxy@5.12.5/node_modules:/mnt/c/Users/Deamon/Desktop/Backup/Serveur MCP/Workflow/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../dist/bin/mcp-proxy.mjs" "$@"
else
  exec node  "$basedir/../../dist/bin/mcp-proxy.mjs" "$@"
fi
